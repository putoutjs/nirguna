{
    "rules": {
        "typescript/find-file": "off"
    },
    "match": {
        ".github/**/*.yml": {
            "github/set-node-versions": ["on", {
                "versions": [
                    "24.x",
                    "25.6.1"
                ]
            }]
        },
        ".filesystem.json": {
            "filesystem/remove-files": ["on", {
                "names": ["coverage"]
            }]
        }
    },
    "ignore": ["example", "!**/coverage"]
}
